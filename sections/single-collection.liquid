<div class="collection collection1">
  <div class="container">
    <h2 class="featured-product-title">{{ section.settings.collection.title }}</h2>
    <div class="row">
      {%- for product in section.settings.collection.products limit: 4 -%}

        <div class="col-md-4">
          <div class="collection1__collection-item mb-5">
            <div class="collection1__product-img">
              <div class="collection1__heart"><i class="bi bi-heart"></i></div>
              {%- if product.images[0] != blank -%}
              <img
                srcset="{%- if product.images[0].width >= 165 -%}{{ product.images[0] | img_url: '165x' }} 165w,{%- endif -%}
                    {%- if product.images[0].width >= 360 -%}{{ product.images[0] | img_url: '360x' }} 360w,{%- endif -%}
                    {%- if product.images[0].width >= 535 -%}{{ product.images[0] | img_url: '535x' }} 535w,{%- endif -%}
                    {%- if product.images[0].width >= 720 -%}{{ product.images[0] | img_url: '720x' }} 720w,{%- endif -%}
                    {%- if product.images[0].width >= 940 -%}{{ product.images[0] | img_url: '940x' }} 940w,{%- endif -%}
                    {%- if product.images[0].width >= 1070 -%}{{ product.images[0] | img_url: '2000x' }} 2000w{%- endif -%}"
                src="{{ product.images[0] | img_url: 'master' }}"
                sizes="(min-width: 1100px) 2000px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                alt="{{ product.images[0].alt | escape }}"
                loading="lazy"
                class="hero1__bg"
                width="{{ product.images[0].width }}"
                
                >
              {%- else -%}
                {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </div>
            <div class="collection1__product-info">
              <div class="collection1__product-details"><span class="collection1__product-title">{{ product.title }}</span><span
                  class="collection1__product-price">{{ product.price | money}}</span></div>
              <div class="collection1__product-colors">
                <div class="collection1__color collection1__color--blue"></div>
                <div class="collection1__color collection1__color--black"></div>
              </div>
            </div>
          </div>
        </div>
      
      {%- endfor -%}
    </div>
  </div>
</div>




<div class="hero hero1 hero1--aligned-{{ section.settings.hero1-content-alignment }} hero1--{{ section.settings.hero1-height }}">

  {%- if section.settings.image != blank -%}
    <img srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | img_url: '165x' }} 165w,{%- endif -%}
      {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | img_url: '360x' }} 360w,{%- endif -%}
      {%- if section.settings.image.width >= 535 -%}{{ section.settings.image | img_url: '535x' }} 535w,{%- endif -%}
      {%- if section.settings.image.width >= 720 -%}{{ section.settings.image | img_url: '720x' }} 720w,{%- endif -%}
      {%- if section.settings.image.width >= 940 -%}{{ section.settings.image | img_url: '940x' }} 940w,{%- endif -%}
      {%- if section.settings.image.width >= 1070 -%}{{ section.settings.image | img_url: '2000x' }} 2000w{%- endif -%}"
      src="{{ section.settings.image | img_url: 'master' }}"
      sizes="(min-width: 1100px) 2000px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
      alt="{{ section.settings.image.alt | escape }}"
      loading="lazy"
      class="hero1__bg"
      width="{{ section.settings.image.width }}"
    >
  {%- else -%}
    {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
  {%- endif -%}

  {% assign opacity = section.settings.opacity | divided_by: 100.00 %}

  <div class="hero1__content-container" style="background-color: {{ section.settings.bg-opacity | color_modify: 'alpha', opacity }}">
    <div class="hero1__info">
      {%- for block in section.blocks -%}
        {% case block.type %}
          {%- when 'heading' -%}
            <h1 class="hero1__title hero1__title--{{ block.settings.title-size }}">{{ block.settings.hero-heading | escape }}</h1>
          
          {%- when 'subheading' -%}
            <p class="hero1__paragraph">{{ block.settings.hero-subheading }}</p>

          {%- when 'button' -%}
            {%- if block.settings.button_text != blank -%}
              <a href="{{ block.settings.button_url }}" {{ block.shopify_attributes }} class="hero1__cta">{{ block.settings.button_text | escape }}</a>

            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Single Collection",
  "settings": [
    {
      "type": "select",
      "id": "hero1-height",
      "options": [
        {
          "value": "25vh",
          "label": "25%"
        },
        {
          "value": "50vh",
          "label": "50%"
        },
        {
          "value": "75vh",
          "label": "75%"
        },
        {
          "value": "100vh",
          "label": "100%"
        }
      ],
      "default": "100vh",
      "label": "Hero 1 height"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Featured Collection"
    },
    {
      "type": "color",
      "id": "bg-opacity",
      "label": "Background Overlay Color",
      "default": "#121212"
    },
    {
      "type": "range",
      "id": "opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Opacity",
      "default": 50
    },
    {
      "type": "select",
      "id": "hero1-content-alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Hero Content Alignment"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.image-with-text.blocks.heading.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "hero-heading",
          "label": "Hero Heading",
          "default": "Shop The Summer Collection"
        },
        {
          "type": "select",
          "id": "title-size",
          "options": [
        {
          "value": "sm",
          "label": "Small"
        },
        {
          "value": "md",
          "label": "Medium"
        },
        {
          "value": "lg",
          "label": "Large"
        }
      ],
      "default": "md",
      "label": "Font Size"
    }
      ]
    },
    {
      "type": "subheading",
      "name": "Hero Subheading",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "hero-subheading",
          "label": "Hero Subheading",
          "default": "Just in time for the summer. Take a peek on what ' s new."
        }
      ]
    },
    {
      "type": "button",
      "name": "t:sections.image-with-text.blocks.button.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "default": "SHOP COLLECTION",
          "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
          "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Single Collection",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "subheading"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
